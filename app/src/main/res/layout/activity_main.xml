<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"

    tools:context="hr.fer.tel.ruazosa.zet.MainActivity" >

    <Button
        android:id="@+id/show_lines_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_lines_btn_text"/>

    <Button
        android:id="@+id/show_stops_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_stops_btn_text"/>

    <Button
        android:id="@+id/show_nearby_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_nearby_btn_text"/>

</LinearLayout>
